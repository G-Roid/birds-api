<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <script src="https://kit.fontawesome.com/0d0fc5b67b.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik+Moonrocks&display=swap" rel="stylesheet">
    <title>Oscar's Birds</title>
</head>
<body class="layered-image">
    <!-- <h1>Database - Manager</h1> -->
 
    <nav>
        <h4>Menu</h4>
        <ul>
            <li><a href="/"><i class="fa-solid fa-house-user"></i>Home</a></li>
            <li><a href="/api/manager"><i class="fa-solid fa-cloud-arrow-up"></i></i>Manager</a></li>
        </ul>
    </nav>

    <section class="logo">
        
        <!-- <img src="/images/Oscar's Birds-logos.jpeg" alt=""> -->
        <!-- <img src="/images/Oscar's Birds-logos_transparent.png" alt> -->
        <img src="/images/Oscar's Birds-logos_white.png" alt>

    </section>

    <main>
        <section class="row">
            <section class="column">
                <h2>ADD/UPDATE BIRD</h2>
                    <form action="/api" method="POST">
                        <input type="text" placeholder="Name" name="birdName" autocomplete="off">
                        <input type="text" placeholder="Image URL" name="image" autocomplete="off">
                        <input type="text" placeholder="Scientific Name" name="scifiName" autocomplete="off">
                        <textarea rows="5" cols="40" type="text" placeholder="Description" name="description" autocomplete="off"></textarea>
                        <!-- <label for="start">Date:</label>
                        <input type="date" id="start" name="trip-start" value="2018-07-22" min="2018-01-01" max="2025-12-31"> -->

                        <label for="avatar">Choose a profile picture:</label>

                        <input type="file" id="avatar" name="avatar" accept="image/png, image/jpeg">
                        <section>
                            <button type="submit">SUBMIT NEW</button>
                            <button type="button" id="updateButton">UDPATE EXISTING</button>
                        </section>
    
    
                    </form>
            </section>
    
            <section class="column">
                <h2>DELETE BIRD</h2>
                <!-- <input type="text" placeholder='Bird to delete' name='deleteInput' id='deleteInput'> -->

                <div>
                    <!-- <label for="bird-select">Choose a species:</label> -->
        
                    <select name="birds" id="birdSelect">
                        <option value="">--SPECIES--</option>
        
                    </select>
                </div>
                <button id='deleteButton'>Delete</button>
        
        
                <!-- <h3>CURRENT BIRDS</h3>
                <ul class="birds">
                    <li></li>
                </ul>       -->


            </section>
        </section>




    </main>

    

    <script src="/manager.js"></script>
</body>
</html>